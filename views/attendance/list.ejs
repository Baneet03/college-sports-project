<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

	<% if (messages.error) { %>
		<p style="color:red">
			<%- messages.error %>
		</p>
		<% } %>

			<% if (messages.success) { %>
				<p style="color:green">
					<%- messages.success %>
				</p>
				<% } %>
					<form action="/attendance" method="post" name="form">
						<table width="25%" border="0">

							<select name="event_id" id='eventSelect'>
								<!-- <option value="Select">Please Select a Event</option> -->
								<optgroup label="Select Table">
									<option value="">Select Event</option>
									<% if (data) { %>
										<% data.forEach(function(row){ %>
											<option value="<%= row.id %>">
												<%= row.event_name %>
											</option>
											<% }) %>
												<% } %>
								</optgroup>
							</select>
							<tr>
								<td></td>
								<td>
									<input type="submit" name="Submit" value="Add" />
								</td>
							</tr>
						</table>
					</form>

					<table style="display : <%= success %>" width='80%' border=0>
						<tr style='text-align:left; background-color:#CCC'>
							<th>ID</th>
							<th>Event Name</th>
							<th>Student Name</th>
							<th>Roll No</th>
							<th>Branch</th>
							<th>Year</th>
							<th>Gender</th>
							<th>Attendance</th>
						</tr>
						<!--
		Using FOREACH LOOP for the students array
		
		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	-->
						<% if (students) { %>
							<% let i = 0%>
								<% students.forEach(function(student){ %>

									<tr>
										<td>
											<%= ++i %>
										</td>
										<td>
											<%= event_name %>
										</td>
										<td>
											<%= student.name %>
										</td>
										<td>
											<%= student.rollno %>
										</td>
										<td>
											<%= student.attendence %>
										</td>

									</tr>
									<% }) %>
										<% } %>

					</table>

					<!--
including footer content which is common for all pages
-->
					<%- include ../layouts/footer.ejs %>