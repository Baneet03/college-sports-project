<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

	<% if (messages.error) { %>
		<p class="alert alert-danger">
			<%- messages.error %>
		</p>
		<% } %>

			<% if (messages.success) { %>
				<p class="alert alert-success">
					<%- messages.success %>
				</p>
				<% } %>
					<div style="padding-top:300px">
						<form action="/attendence/edit/<%= id %>" method="post" name="form1">
							<table width="25%" border="0">
								<tr>
									<td>Name</td>
									<td>
										<input type="text" name="event_name" id="event_name" value="<%= event_name %>" />
									</td>
								</tr>
								<tr>
									<td>Type</td>
									<td>
										<input type="text" name="event_type" value="<%= event_type %>" />
									</td>
								</tr>
								<tr>
									<td>Category</td>
									<td>
										<input type="text" name="event_cat" value="<%= event_cat %>" />
									</td>
								</tr>
								<tr>
									<td>gender</td>
									<td>
										<input type="text" name="gender" value="<%= gender %>" />
									</td>
								</tr>
								<tr>
									<td></td>
									<td>
										<input type="submit" name="Submit" value="Edit" />
									</td>
								</tr>
							</table>
							<input type="hidden" name="_method" value="PUT" />
						</form>
					</div>
					<!--
including footer content which is common for all pages
-->
					<%- include ../layouts/footer.ejs %>