												</td>
												<td>
													<%= student.rollno %>
												</td>
												<td>
													<%= student.branch %>
												</td>
												<td>
													<%= student.gender %>
												</td>
												<td>
													<%= student.chest_no %>
												</td>
												<td>
													<%= student.events %>
